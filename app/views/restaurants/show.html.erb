<div class="container">
  <div class="center-block">

    <h2>
      <%= @restaurant.name %>
    </h2>
    <p>
      <%= @restaurant.address %>
    </p>
    <p>
      <%= @restaurant.phone_number %>
    </p>

    <p>
      <%= link_to edit_restaurant_path do %>
        <button type="button" class="btn btn-primary">Edit</button>
      <% end %>
      <%= link_to new_restaurant_review_path(@restaurant) do %>
        <button type="button" class="btn btn-primary">Add a Review</button>
      <% end %>
      <%= link_to restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } do %>
        <button type="button" class="btn btn-danger">Delete</button>
      <% end %>
    </p>
    <hr>
    <% @restaurant.reviews.each do |review| %>
      <p>
        <em><%= review.content %></em>
        <br>
        Rating: <%= "*" * review.rating %>
      </p>
    <% end %>
    <p>
      <%= link_to "Back to restaurants list", restaurants_path %>
    </p>
  </div>
</div>


